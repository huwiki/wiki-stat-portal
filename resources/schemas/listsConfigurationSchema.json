{
	"type": "object",
	"title": "List configuration for a wiki",
	"properties": {
		"use": {
			"type": "string"
		},
		"lists": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"$ref": "#/definitions/list"
					},
					{
						"$ref": "#/definitions/localizedList"
					}
				]
			},
			"minItems": 1
		}
	},
	"additionalProperties": false,
	"oneOf": [
		{
			"required": [
				"use"
			]
		},
		{
			"required": [
				"lists"
			]
		}
	],
	"definitions": {
		"list": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"groupId": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"itemCount": {
					"type": "integer"
				},
				"isTimeless": {
					"type": "boolean"
				},
				"userRequirements": {
					"$ref": "common.json#/definitions/userRequirement"
				},
				"columns": {
					"$ref": "#/definitions/listColumnList"
				},
				"orderBy": {
					"$ref": "#/definitions/listOrderByList"
				}
			},
			"required": [
				"id",
				"groupId",
				"name",
				"itemCount",
				"columns",
				"orderBy"
			],
			"additionalProperties": false
		},
		"localizedList": {
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"groupId": {
					"type": "string"
				},
				"i18nKey": {
					"type": "string"
				},
				"itemCount": {
					"type": "integer"
				},
				"isTimeless": {
					"type": "boolean"
				},
				"userRequirements": {
					"$ref": "common.json#/definitions/userRequirement"
				},
				"columns": {
					"$ref": "#/definitions/listColumnList"
				},
				"orderBy": {
					"$ref": "#/definitions/listOrderByList"
				}
			},
			"required": [
				"id",
				"groupId",
				"i18nKey",
				"itemCount",
				"columns",
				"orderBy"
			],
			"additionalProperties": false
		},
		"listColumnList": {
			"type": "array",
			"items": {
				"oneOf": [
					{
						"$ref": "#/definitions/parameterlessColumn"
					},
					{
						"$ref": "#/definitions/userNameColumn"
					},
					{
						"$ref": "#/definitions/columnWithNamespaceParameter"
					},
					{
						"$ref": "#/definitions/columnWithNamespaceAndChangeTagParameter"
					},
					{
						"$ref": "#/definitions/columnWithLogTypeParameter"
					}
				]
			},
			"minItems": 1
		},
		"parameterlessColumn": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"columnId": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"enum": [
						"counter",
						"userGroups",
						"editsInPeriod",
						"editsInPeriodPercentage",
						"editsSinceRegistration",
						"editsSinceRegistrationPercentage",
						"revertedEditsInPeriod",
						"revertedEditsInPeriodPercentage",
						"revertedEditsSinceRegistration",
						"revertedEditsSinceRegistrationPercentage",
						"firstEditDate",
						"lastEditDate",
						"daysBetweenFirstAndLastEdit",
						"characterChangesInPeriod",
						"characterChangesInPeriodPercentage",
						"characterChangesSinceRegistration",
						"characterChangesSinceRegistrationPercentage",
						"thanksInPeriod",
						"thanksInPeriodPercentage",
						"thanksSinceRegistration",
						"thanksSinceRegistrationPercentage",
						"logEventsInPeriod",
						"logEventsInPeriodPercentage",
						"logEventsSinceRegistration",
						"logEventsSinceRegistrationPercentage",
						"firstLogEventDate",
						"lastLogEventDate",
						"averageLogEventsPerDaySinceRegistration",
						"averageLogEventsPerDayInPeriod",
						"registrationDate",
						"daysSinceRegistration",
						"daysBetweenFirstAndLastLogEvent",
						"activeDaysInPeriod",
						"activeDaysSinceRegistration",
						"averageEditsPerDaySinceRegistration",
						"averageEditsPerDayInPeriod",
						"levelAtPeriodStart",
						"levelAtPeriodEnd",
						"levelAtPeriodEndWithChange"
					]
				}
			},
			"required": [
				"type"
			]
		},
		"userNameColumn": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"columnId": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"pattern": "userName"
				},
				"showUserLinks": {
					"type": "boolean"
				}
			},
			"required": [
				"type"
			]
		},
		"columnWithNamespaceParameter": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"columnId": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"enum": [
						"editsInNamespaceInPeriod",
						"editsInNamespaceInPeriodPercentage",
						"editsInNamespaceSinceRegistration",
						"editsInNamespaceSinceRegistrationPercentage",
						"revertedEditsInNamespaceInPeriod",
						"revertedEditsInNamespaceInPeriodPercentage",
						"revertedEditsInNamespaceSinceRegistration",
						"revertedEditsInNamespaceSinceRegistrationPercentage",
						"characterChangesInNamespaceInPeriod",
						"characterChangesInNamespaceInPeriodPercentage",
						"characterChangesInNamespaceSinceRegistration",
						"characterChangesInNamespaceSinceRegistrationPercentage",
						"activeDaysInNamespaceInPeriod",
						"activeDaysInNamespaceSinceRegistration"
					]
				},
				"namespace": {
					"anyOf": [
						{
							"type": "integer",
							"minimum": 0
						},
						{
							"type": "array",
							"items": {
								"type": "integer",
								"minimum": 0
							},
							"minItems": 1
						}
					]
				}
			},
			"required": [
				"type",
				"namespace"
			]
		},
		"columnWithNamespaceAndChangeTagParameter": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"columnId": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"enum": [
						"editsInPeriodByChangeTag",
						"editsSinceRegistrationByChangeTag",
						"characterChangesInPeriodByChangeTag",
						"characterChangesSinceRegistrationByChangeTag"
					]
				},
				"changeTag": {
					"anyOf": [
						{
							"$ref": "#/definitions/changeTagFilterParameter"
						},
						{
							"type": "array",
							"items": {
								"$ref": "#/definitions/changeTagFilterParameter"
							},
							"minItems": 1
						}
					]
				}
			},
			"required": [
				"type",
				"changeTag"
			]
		},
		"changeTagFilterParameter": {
			"type": "object",
			"properties": {
				"changeTagId": {
					"type": "integer",
					"minimum": 0
				},
				"namespace": {
					"type": "integer",
					"minimum": 0
				}
			},
			"required": [
				"changeTagId"
			]
		},
		"columnWithLogTypeParameter": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"columnId": {
					"type": "string"
				},
				"type": {
					"type": "string",
					"enum": [
						"logEventsInPeriodByType",
						"logEventsSinceRegistrationByType"
					]
				},
				"logFilter": {
					"anyOf": [
						{
							"$ref": "#/definitions/logFilterParameter"
						},
						{
							"type": "array",
							"items": {
								"$ref": "#/definitions/logFilterParameter"
							},
							"minItems": 1
						}
					]
				}
			},
			"required": [
				"type",
				"logFilter"
			]
		},
		"logFilterParameter": {
			"type": "object",
			"properties": {
				"logType": {
					"type": "string"
				},
				"logAction": {
					"type": "string"
				}
			},
			"anyOf": [
				{
					"required": [
						"logType"
					]
				},
				{
					"required": [
						"logAction"
					]
				}
			]
		},
		"listOrderByList": {
			"type": "array",
			"items": {
				"$ref": "#/definitions/listOrderBy"
			},
			"minItems": 1
		},
		"listOrderBy": {
			"type": "object",
			"additionalProperties": false,
			"properties": {
				"columnId": {
					"type": "string"
				},
				"direction": {
					"type": "string",
					"enum": [
						"ascending",
						"descending"
					]
				}
			},
			"required": [
				"columnId",
				"direction"
			]
		}
	}
}
