{
	"npm.packageManager": "yarn",
	"files.exclude": {
		"node_modules/": true,
		//"tools-out/": true,
	},
	"editor.formatOnSave": true,
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"[typescriptreact]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"[sql]": {
		"editor.formatOnSave": false
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"json.schemas": [
		{
			"fileMatch": [
				"./resources/configuration/knownWikis.json",
			],
			"url": "./resources/schemas/knownWikisConfigurationSchema.json"
		},
		{
			"fileMatch": [
				"resources/configuration/modules/userPyramids/*.userPyramids.json",
			],
			"url": "./resources/schemas/userPyramidsConfigurationSchema.json"
		},
		{
			"fileMatch": [
				"resources/configuration/serviceAward/*.serviceAwardLevels.json",
			],
			"url": "./resources/schemas/serviceAwardLevelsConfigurationSchema.json"
		},
		{
			"fileMatch": [
				"resources/configuration/modules/lists/*.lists.json",
			],
			"url": "./resources/schemas/listsConfigurationSchema.json"
		}
	]
}
