{
	"npm.packageManager": "yarn",
	"files.exclude": {
		"node_modules/": true,
		"tools-out/": true,
	},
	"editor.formatOnSave": true,
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"[typescriptreact]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"json.schemas": [
		{
			"fileMatch": [
				"./resources/configuration/knownWikis.json",
			],
			"url": "./resources/schemas/knownWikisConfigurationSchema.json"
		},
		{
			"fileMatch": [
				"resources/configuration/modules/userPyramids/*.userPyramids.json",
			],
			"url": "./resources/schemas/userPyramidsConfigurationSchema.json"
		}
	]
}
