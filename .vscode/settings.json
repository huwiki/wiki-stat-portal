{
	"npm.packageManager": "yarn",
	"files.exclude": {
		"node_modules/": true,
		"client/**/*.js": true,
		"client/**/*.jsx": true,
		"common/**/*.js": true,
		"common/**/*.jsx": true,
		"components/**/*.js": true,
		"components/**/*.jsx": true,
		"pages/**/*.js": true,
		"pages/**/*.jsx": true,
		"server/**/*.js": true,
		"server/**/*.jsx": true,
		"tools/**/*.js": true,
		"tools/**/*.jsx": true
	},
	"editor.formatOnSave": true,
	"[typescript]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"[typescriptreact]": {
		"editor.codeActionsOnSave": {
			"source.organizeImports": true
		}
	},
	"typescript.tsdk": "node_modules/typescript/lib",
	"json.schemas": [
		{
			"fileMatch": [
				"/resources/configuration/knownWikis.json",
			],
			"url": "./resources/schemas/knownWikisConfigurationSchema.json"
		},
		{
			"fileMatch": [
				"/resources/configuration/modules/funnel/*.funnel.json",
			],
			"url": "./resources/schemas/funnelConfigurationSchema.json"
		}
	]
}
